@model HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}
  <div class="col-md-12">
    @foreach (var noticia in Model.Noticias)
    {
      <h1>@noticia.Titulo</h1>
      <p>@noticia.Descripcion</p>

      <div>
        <span class="badge">@noticia.FechaCreacion.ToShortDateString()</span>
      </div>
      <hr>
    }
  </div>
