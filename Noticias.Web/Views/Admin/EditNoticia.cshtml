@model EditNoticiaViewModel;
@{
    ViewData["Title"] = "Noticia";
    var actionForm = Model.NoticiaId > 0 ? "EditNoticia" : "CreateNoticia";
    var autores = ViewData["Autores"] as IEnumerable<SelectListItem>;
    var fechaCreacion = Model.FechaCreacion.ToString("yyyy-MM-dd");
}

<form asp-controller="Admin" asp-action="@actionForm" method="post">
  <input type="hidden" name="NoticiaId" value="@Model.NoticiaId" />
  <div class="form-group">
    <label asp-for="@Model.Titulo" ></label>
    <input class="form-control" asp-for="@Model.Titulo" />
    <span asp-validation-for="@Model.Titulo" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Descripcion" ></label>
    <textarea class="form-control" asp-for="@Model.Descripcion"></textarea>
    <span asp-validation-for="@Model.Descripcion" class="text-danger" ></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Contenido" ></label>
    <textarea class="form-control" asp-for="@Model.Contenido"></textarea>
    <span asp-validation-for="@Model.Contenido" class="text-danger" ></span>
  </div>
  <div class="form-group">
    <label for="FechaCreacion" >Fecha Creaci&oacute;n</label>
    <input type="date" class="form-control" asp-for="@Model.FechaCreacion" value="@fechaCreacion" />
  </div>
  <div class="form-group">
    <label for="AutorId" >Autor</label>
    <select class="form-control" asp-for="@Model.AutorId" asp-items="@autores" ></select>
  </div>
  <button class="btn btn-primary" type="submit">Guardar</button>
  <a
    asp-controller="Admin" 
    asp-action="Noticias"
    >Regresar</a>
</form>