@model EditAutorViewModel;
@{
    ViewData["Title"] = "Autor";
    var actionForm = Model.AutorId > 0 ? "EditAutor" : "CreateAutor";
}

<form asp-controller="Admin" asp-action="@actionForm" method="post">
  <input type="hidden" name="AutorId" value="@Model.AutorId" />
  <div class="form-group">
    <label for="Nombre">Nombre</label>
    <input class="form-control" asp-for="@Model.Nombre" />
     <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="Apellidos">Apellidos</label>
    <input class="form-control" asp-for="@Model.Apellidos" />
    <span asp-validation-for="@Model.Apellidos" class="text-danger" ></span>
  </div>
  <button class="btn btn-primary" type="submit">Guardar</button>
  <a
    asp-controller="Admin" 
    asp-action="Autores"
    >Regresar</a>
</form>